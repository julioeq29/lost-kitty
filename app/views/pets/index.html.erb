<h1>All lost & found pets:</h1>

<% @pets.each do |pet| %>
  <p><%= link_to pet.name, pet_path(pet) %></p>
  <p> - <strong><%= pet.species %></strong></p>
  <p>found <%= pet.days_since_found %> days ago</p>
  <%= link_to "Delete", pet_path(pet), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
